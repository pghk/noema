{
  "name": "noema",
  "version": "0.0.0",
  "description": "A personal website.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rm -rf data __sapper__ static/index.css",
    "hydrate": "node -r dotenv/config scripts/build.js",
    "build:tailwind": "postcss static/global.css -o static/index.css",
    "build:sapper": "sapper build",
    "build_all": "run-s hydrate build:*",
    "test:cypress": "cypress run",
    "test:integration": "run-p --race dev test:cypress",
    "test:open": "cypress open",
    "watch:tailwind": "postcss static/global.css -o static/index.css -w",
    "watch:dev": "sapper dev --hot=false",
    "dev:start": "run-p hydrate watch:*",
    "dev": "NODE_ENV=development npm run dev:start",
    "test": "mocha test/unit/**/*.test.js",
    "build": "NODE_ENV=production npm run build_all",
    "start": "node __sapper__/build",
    "export": "sapper export"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pghk/noema.git"
  },
  "dependencies": {
    "airtable": "^0.7.2",
    "autoprefixer": "^9.7.3",
    "compression": "^1.7.1",
    "css-loader": "^3.4.2",
    "markdown-it": "^9.1.0",
    "markdown-it-footnote": "^3.0.2",
    "mini-css-extract-plugin": "^0.8.2",
    "open-color": "^1.7.0",
    "polka": "next",
    "postcss": "^7.0.26",
    "postcss-import": "^12.0.1",
    "sirv": "^0.4.0",
    "svelte-preprocess": "^3.3.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "axios": "^0.19.1",
    "chai": "^4.2.0",
    "cssnano": "^4.1.10",
    "cypress": "^3.8.2",
    "dotenv": "^8.2.0",
    "mocha": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "sapper": "^0.27.9",
    "svelte": "^3.16.7",
    "svelte-loader": "^2.9.0",
    "tailwindcss": "^1.1.4",
    "webpack": "^4.41.5"
  },
  "optionalDependencies": {
    "keytar": "^5.0.0-beta.0"
  },
  "author": "pghk",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pghk/noema/issues"
  },
  "homepage": "https://github.com/pghk/noema#readme"
}
