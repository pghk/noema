{
  "name": "noema",
  "version": "0.0.0",
  "description": "A personal website.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "clean": "rm -rf data __sapper__ static/index.css",
    "hydrate": "node -r dotenv/config scripts/build.js",
    "build:tailwind": "postcss static/global.css -o static/index.css",
    "build:sapper": "sapper build",
    "build_all": "run-s hydrate build:*",
    "test:run": "cypress run",
    "test:open": "cypress open",
    "watch:tailwind": "postcss static/global.css -o static/index.css -w",
    "watch:dev": "npm run hydrate && sapper dev --hot=false",
    "dev_all": "run-p hydrate watch:* --aggregate-output",
    "dev": "NODE_ENV=development npm run dev_all",
    "test": "run-p --race dev test:run",
    "build": "NODE_ENV=production npm run build_all",
    "start": "node __sapper__/build",
    "export": "sapper export"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pghk/noema.git"
  },
  "dependencies": {
    "airtable": "^0.7.1",
    "autoprefixer": "^9.6.1",
    "compression": "^1.7.1",
    "css-loader": "^3.2.0",
    "markdown-it": "^9.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "polka": "next",
    "postcss": "^7.0.18",
    "postcss-import": "^12.0.1",
    "sirv": "^0.4.0",
    "svelte-preprocess": "^3.1.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "cypress": "^3.4.1",
    "dotenv": "^8.1.0",
    "keytar": "^5.0.0-beta.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "sapper": "^0.27.0",
    "svelte": "^3.0.0",
    "svelte-loader": "^2.9.0",
    "tailwindcss": "^1.1.2",
    "webpack": "^4.7.0"
  },
  "author": "pghk",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pghk/noema/issues"
  },
  "homepage": "https://github.com/pghk/noema#readme"
}
