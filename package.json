{
  "name": "noema",
  "version": "2.0.0",
  "description": "A personal website.",
  "author": "pghk",
  "license": "ISC",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "test:jest": "jest src",
    "jest:watch": "npm run test:jest -- --watch",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:cy": "run-p --race dev cy:run",
    "test": "npm run test:jest && npm run test:cy",
    "pretest": "rm -rf .nyc_output || true",
    "posttest": "npm run report:combined",
    "mkdir:reports": "mkdir reports || true",
    "precopy:reports": "npm run mkdir:reports",
    "copy:reports": "cp coverage/cypress/coverage-final.json reports/from-cypress.json && cp coverage/jest/coverage-final.json reports/from-jest.json",
    "precombine:reports": "npm run copy:reports && mkdir .nyc_output || true",
    "combine:reports": "npx nyc merge reports && mv coverage.json .nyc_output/out.json",
    "prereport:combined": "npm run combine:reports",
    "report:combined": "npx nyc report --reporter lcov --reporter text --report-dir coverage",
    "review": "open coverage/lcov-report/index.html",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "clean": "rm -rf .nyc_output coverage reports __sapper__"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "next",
    "sirv": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@cypress/code-coverage": "^3.8.1",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@storybook/addon-actions": "^6.0.10",
    "@storybook/addon-essentials": "^6.0.10",
    "@storybook/addon-links": "^6.0.10",
    "@storybook/svelte": "^6.0.10",
    "@testing-library/jest-dom": "^5.11.3",
    "@testing-library/svelte": "^3.0.0",
    "axios": "^0.20.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "cypress": "^4.12.1",
    "istanbul": "^0.4.5",
    "istanbul-lib-coverage": "^3.0.0",
    "jest": "^26.4.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "react-is": "^16.13.1",
    "rollup": "^2.3.4",
    "rollup-plugin-istanbul": "git+https://github.com/billowz/rollup-plugin-istanbul.git#rc",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^6.1.0",
    "sapper": "^0.28.0",
    "source-map-support": "^0.5.19",
    "svelte": "^3.24.1",
    "svelte-jester": "^1.1.2",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^4.0.12"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage/jest",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|stylesheet)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/storybook-static/"
    ]
  },
  "nyc": {
    "cache": false,
    "report-dir": "coverage/cypress",
    "extension": [
      ".js",
      ".svelte"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pghk/noema.git"
  },
  "bugs": {
    "url": "https://github.com/pghk/noema/issues"
  },
  "homepage": "https://github.com/pghk/noema#readme"
}
